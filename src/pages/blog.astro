---
// src/pages/blog.astro
const title = "MicPricing.com - Blog";
const description = "Dernières nouvelles et conseils sur les microphones";

const posts = [
  { 
    title: "Choisir le bon microphone pour votre voix",
    slug: "choisir-microphone",
    excerpt: "Découvrez comment sélectionner le microphone parfait pour votre timbre de voix unique.",
    image: "/images/mic-choice.jpg"
  },
  { 
    title: "Les meilleurs microphones pour le streaming",
    slug: "microphones-streaming",
    excerpt: "Notre top 5 des microphones pour une qualité audio exceptionnelle en streaming.",
    image: "/images/streaming-mic.jpg"
  },
  { 
    title: "Comment entretenir votre microphone",
    slug: "entretien-microphone",
    excerpt: "Apprenez les techniques essentielles pour prolonger la durée de vie de votre micro.",
    image: "/images/mic-maintenance.jpg"
  },
  { 
    title: "Microphones à condensateur vs dynamiques",
    slug: "condensateur-vs-dynamique",
    excerpt: "Comparez les avantages et les inconvénients de ces deux types de microphones populaires.",
    image: "/images/mic-types.jpg"
  },
  { 
    title: "L'art de l'enregistrement vocal à domicile",
    slug: "enregistrement-vocal-domicile",
    excerpt: "Créez un studio d'enregistrement abordable et efficace chez vous.",
    image: "/images/home-recording.jpg"
  },
  { 
    title: "Les tendances des microphones en 2024",
    slug: "tendances-microphones-2024",
    excerpt: "Découvrez les dernières innovations dans le monde des microphones.",
    image: "/images/mic-trends.jpg"
  }
];
---

<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      line-height: 1.6;
      color: #333;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }
    h1 { color: #2c3e50; margin-bottom: 10px; text-align: center; }
    p { margin-bottom: 30px; text-align: center; }
    nav {
      background-color: #2c3e50;
      padding: 10px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .logo {
      color: white;
      font-size: 1.5em;
      font-weight: bold;
      text-decoration: none;
    }
    .nav-link {
      color: white;
      text-decoration: none;
      transition: color 0.3s ease;
    }
    .nav-link:hover {
      color: #3498db;
    }
    .blog-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
    }
    .blog-card {
      background-color: white;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease;
    }
    .blog-card:hover {
      transform: translateY(-5px);
    }
    .blog-card img {
      width: 100%;
      height: 150px;
      object-fit: cover;
    }
    .blog-card-content {
      padding: 15px;
    }
    .blog-card h2 {
      font-size: 1.2em;
      margin-top: 0;
      margin-bottom: 10px;
    }
    .blog-card p {
      font-size: 0.9em;
      margin-bottom: 15px;
      text-align: left;
    }
    .read-more {
      display: inline-block;
      background-color: #3498db;
      color: white;
      padding: 5px 10px;
      text-decoration: none;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }
    .read-more:hover {
      background-color: #2980b9;
    }
  </style>
</head>
<body>
  <nav>
    <a href="/" class="logo">MicPricing.com</a>
    <a href="/blog" class="nav-link">Blog</a>
  </nav>

  <div class="container">
    <header>
      <h1>{title}</h1>
      <p>{description}</p>
    </header>
    
    <main>
      <div class="blog-grid">
        {posts.map(post => (
          <div class="blog-card">
            <img src={post.image} alt={post.title} />
            <div class="blog-card-content">
              <h2>{post.title}</h2>
              <p>{post.excerpt}</p>
              <a href={`/blog/${post.slug}`} class="read-more">Lire la suite</a>
            </div>
          </div>
        ))}
      </div>
    </main>
  </div>
</body>
</html>